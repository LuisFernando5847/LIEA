@model LIEA_System.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="alert alert-secondary text-center">Actualizacion</h1>
<div class="float-lg-start">
    <a asp-action="Index" class="btn btn-outline-info">Regresar</a>
</div>

<h4 class="text-center">Actualizar datos de clientes</h4>

<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="actualizarDatos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Cliente" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo_Electronico" class="control-label"></label>
                <input asp-for="Correo_Electronico" class="form-control" type="email" />
                <span asp-validation-for="Correo_Electronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" type="tel" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group float-lg-end">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $.validator.addMethod("exactLength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, "Por favor ingrese exactamente {0} caracteres.");

            $("form").validate({
                rules: {
                    Nombre: {
                        required: true,
                        maxlength: 50,
                        lettersonly: true
                    },
                    Apellido: {
                        required: true,
                        maxlength: 50,
                        lettersonly: true
                    },
                    Direccion: {
                        required: true
                    },
                    Correo_Electronico: {
                        required: true,
                        email: true
                    },
                    Telefono: {
                        required: true,
                        number: true,
                        exactLength: 10
                    }
                },
                messages: {
                    Nombre: {
                        required: "El nombre es obligatorio",
                        maxlength: "El nombre no puede tener más de 50 caracteres",
                        lettersonly: "El nombre solo puede contener letras y espacios"
                    },
                    Apellido: {
                        required: "El apellido es obligatorio",
                        maxlength: "El apellido no puede tener más de 50 caracteres",
                        lettersonly: "El apellido solo puede contener letras y espacios"
                    },
                    Direccion: {
                        required: "La dirección es obligatoria"
                    },
                    Correo_Electronico: {
                        required: "El correo electrónico es obligatorio",
                        email: "El correo electrónico no es válido"
                    },
                    Telefono: {
                        required: "El teléfono es obligatorio",
                        number: "El teléfono debe ser un número",
                        exactLength: "El teléfono debe contener exactamente 10 números"
                    }
                }
            });
        });
    </script>
}
